@model QL_KhoaHocOnl.ViewModel.RegisterVM

@{
    ViewBag.Title = "Register";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

<section class="h-100 gradient-form overflow-auto" style="background-image: url('https://scontent.fsgn13-2.fna.fbcdn.net/v/t39.30808-6/293906777_2106162549563741_4969243503531014164_n.jpg?_nc_cat=106&ccb=1-7&_nc_sid=524774&_nc_eui2=AeHI22JLJUrmaPUj-wUmQ93VRniddlcF6dFGeJ12VwXp0ZN0QbSyw56NPmZbutVQY6X9fnzksMsjFOFI1bFYNqDV&_nc_ohc=QBkjuHpTYV8AX9PqqS7&_nc_zt=23&_nc_ht=scontent.fsgn13-2.fna&oh=00_AfAnqRvK8QPFEFBXFvgY-6Ocq8zZSc9V5O52Uc7qDMGDSA&oe=6571EC93')">
    <div class="container my-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-6">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-12">
                            <div class="card-body p-md-4 mx-md-4">

                                <a href="/Home/index" class="btn btn-light">
                                    <i class="bi bi-arrow-return-left"></i> Quay lại trang chủ
                                </a>

                                <h4 class="mt-1 mb-3 pb-1 text-center">Đăng Ký</h4>

                                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                                {
                                    <div class="form-outline mb-3">
                                        <label class="form-label" for="form2Example11">Họ tên</label>
                                        <input type="text" class="form-control"
                                               placeholder="VD: Nguyễn Văn Toàn" name="Fullname" />
                                        @Html.ValidationMessageFor(temp => temp.Fullname, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-outline mb-3">
                                        <label class="form-label" for="form2Example11">Tên đăng nhập</label>
                                        <input type="text" class="form-control"
                                               placeholder="VD: VanToan123" name="Username" />
                                        @Html.ValidationMessageFor(temp => temp.Username, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-outline mb-3">
                                        <label class="form-label" for="form2Example11">Email</label>
                                        <input type="email" class="form-control"
                                               placeholder="VD: VanToan123@gmail.com" name="Email" />
                                        @Html.ValidationMessageFor(temp => temp.Email, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-outline mb-3">
                                        <label class="form-label" for="form2Example22">Mật khẩu</label>
                                        <input type="password" class="form-control" name="Password" />
                                        @Html.ValidationMessageFor(temp => temp.Password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-outline mb-3">
                                        <label class="form-label" for="form2Example11">Nhập lại mật khẩu</label>
                                        <input type="password" class="form-control" name="ConfirmPassword" />
                                        @Html.ValidationMessageFor(temp => temp.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="text-center w-100">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3 w-100" type="submit">
                                            Đăng ký
                                        </button>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="mb-0 me-2">Bạn đã có tài khoản?</p>
                                        <a href="/Account/Login" class="btn btn-outline-danger">Đăng nhập ngay</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>