@model QL_KhoaHocOnl.Models.LESSON

@{
    ViewBag.Title = "DetailLesson";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <div class="row mt-2">
        <div class="col-8">
            <div class=" text-light px-2" style="width: 100%; background-color: #0B0F59 ; padding:10px 0; border-radius:3px">
                <h1 class="m-1 p-0">@Model.TITLE_LESSON</h1>
                <p class="m-2">Mô tả: @Model.DESCRIPTION_LESSON</p>
            </div>
            <iframe style="width:100%; height:450px; margin-top:10px" src="@Model.LINK_LESSON">
            </iframe>
            <div class="comment mt-2 mb-2">
                <h2 style="margin:0 !important">Comment: </h2>
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                    <label for="floatingTextarea">Comments</label>
                </div>
                <div class="row" style="margin:20px 0 !important">
                    <div class="col-1">
                        <img style="width:100%; height:50px;border-radius:50%; margin:auto; line-height:20px" src="~/Assets/images/avatar-02.jpg" alt="Alternate Text" />
                    </div>
                    <div class="col-11">
                        <div class="row">
                            <h5 style="margin-left:12px; padding:0; margin-bottom:5px !important">Tên user</h5>
                        </div>
                        <div class="row mb-0"><p>cho mình hỏi, khi console.log(typeof index) ra thì đang là kiểu string (trong video cũng vậy). tại sao index trong vòng lặp là số mà console.log() ra thì lại là kiểu string vậy ạ</p></div>
                    </div>
                </div>
            </div>
            <p class="mt-2">
                <a class="btn btn-primary" href="\course\index">Quay lai</a>
            </p>
        </div>
        <div class="col-4">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" style="margin: 0 !important; padding: 0 !important">
                        <button class="accordion-button text-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" style="margin: 0 !important; padding: 5px 10px !important; background-color: #0B0F59;">
                            <h3 class="m-0 p-0">Bài học</h3>
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                        <div class="accordion-body ">
                            @{

                                Html.RenderAction("Lesson", "Course", new { id = Session["ID"] });
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
