@model QL_KhoaHocOnl.Models.TEACHER

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID_TEACHER)
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/GiangVien/ListTeachers">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Thông tin Giảng Viên</li>
                    </ol>
                </nav>
            </div>
        </div>


        <form class="row g-3">
            <div class="card mb-4">
                <div class="card-header text-center font-bold " style="font-weight:bold">Thêm Giảng Viên Mới</div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 rounded-pill">
                            <a>Mã Giảng Viên</a>
                            <span>@Html.TextBoxFor(model => model.ID_TEACHER, new { @readonly = true, @class = "form-control" })</span>
                            @Html.ValidationMessageFor(model => model.ID_TEACHER)
                        </div>
                        <div class="col-md-6">
                            <a>Tên Giảng Viên Mới</a>
                            <span class="">@Html.TextBoxFor(model => model.NAME_TEACHER, new { @class = "form-control" })</span>
                            @Html.ValidationMessageFor(model => model.NAME_TEACHER)
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px">
                        <div class="col-md-6">
                            <a>Trạng Thái</a>
                            <span class="">@Html.TextBoxFor(model => model.STATUS_TEACHER, new { @class = "form-control" })</span>
                            @Html.ValidationMessageFor(model => model.STATUS_TEACHER)
                        </div>
                        <div class="col-md-6">
                            <a>Hình Ảnh</a>
                            <span class="">@Html.TextBoxFor(model => model.THUMBNAIL, new { @class = "form-control" })</span>
                            @Html.ValidationMessageFor(model => model.THUMBNAIL)
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px">
                        <div class="col-md-6">
                            <a>Ngày Tạo</a>
                            <span class="">@Html.TextBoxFor(model => model.D_CREATED, new { @readonly = true, @class = "form-control" })</span>
                            @Html.ValidationMessageFor(model => model.D_CREATED)
                        </div>
                        <div class="col-md-6">
                            <a>Trình Độ</a>
                            <span class="">@Html.TextBoxFor(model => model.LEVEL_TEACHER, new { @class = "form-control" })</span>
                            @Html.ValidationMessageFor(model => model.LEVEL_TEACHER)
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                    <div style="float:right" class="col">
                        <a class="btn btn-primary" href="/Admin/GiangVien/ListTeacher">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
}