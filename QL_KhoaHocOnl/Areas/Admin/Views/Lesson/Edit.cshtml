                            <span class="" id="basic-addon1">@Html.TextBoxFor(model => model.ID_LESSON, new { @readonly = true, @class = "form-control" })</span>
                        </div>
                        <div class="col-md-6">
                            <a>Khóa Học</a>
                            <div class="row-cols-6">
                                @{
