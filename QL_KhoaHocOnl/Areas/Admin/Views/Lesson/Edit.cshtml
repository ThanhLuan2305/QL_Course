                        <div class="col-md-6" style="width:50%">
                            <a>Tiêu Đề Bài Học</a>
                            @Html.TextBoxFor(model => model.TITLE_LESSON, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TITLE_LESSON, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6" style="width:50%">
                            <a>Mô Tả về Khóa Học</a>
                            @Html.TextBoxFor(model => model.DESCRIPTION_LESSON, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DESCRIPTION_LESSON, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*@Html.LabelFor(model => model.DESCRIPTION_COURSE, "Mô Tả ngắn về Khóa Học", new { @class = "control-label col-md-2" })*@
                        <div class="col-md-6">
                            <a>Hình Ảnh Bài Học</a>
                            @Html.TextBoxFor(model => model.THUMBNAIL, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.THUMBNAIL, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <a>Link Bài Học</a>
                            <div class="input-group-prepend">
                                <span class="">@Html.TextBoxFor(model => model.LINK_LESSON, new { @class = "form-control" })</span>
