                                    <select name="ID_COURSE" class="form-control-color col-md-6 rounded" style="width:100%">
                                        <option selected>...</option>
                                        @foreach (var itemcourse in coursess)
                                        {
                                            <option value="@itemcourse.ID_COURSE" @Html.Raw(itemcourse.ID_COURSE == Model.ID_COURSE ? "Selected" : "")>@itemcourse.NAME_COURSE</option>
                                        }
                                    </select>
                                }
